package languoqing;


/*题目：打印出杨辉三角形（要求打印出10行如下图） 
 *1 
 *1 1 
 *1 2 1 
 *1 3 3 1 
 *1 4 6 4 1 
 *1 5 10 10 5 1 
 */

//每一行的元素等于上一行的前两个元素之和,除了两边的1，中间个数为上行前两个元素之和

public class Yanghuisanjiang {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		//定义一个多维数组，控制行和行里面的单个元素
		getResult(5);
	
	}
	
	
	/**
	 * @param arg
	 */
	
	//需要给数组初始化数据
	public static void getResult(int arg){
		
		int [][] arry = new int [arg][arg+1];
		
		//遍历行数
		for(int hang =0;hang <=arg;hang++){
			
			//取行里面的元素
			for(int yuansu=0;yuansu<=hang;yuansu++){
				
				if (hang == 0 || yuansu == 0 ){
					arry[hang][yuansu] = 1;
					System.out.print(arry[hang][yuansu]+";第一行");
					//continue;
				}else if(hang == 1){
					arry[hang][yuansu] = 1;
					
				}else if(hang == yuansu){
					arry[hang][yuansu] = 1;
					
					continue;
				}
				else{
					arry[hang][yuansu] = arry[hang-1][yuansu] + arry[hang-1][yuansu+1];
					//System.out.print(result);
					System.out.print(arry[hang][yuansu]+";");
				
					
				}
				
				System.out.println();

			}
		}
	}	

}
